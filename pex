#!/bin/bash

# 游꿛 Colores
INIT="\033[1;36m"
FINISH="\033[1;32m"
RESET="\033[1;0m"
RM="\033[1;31m"

# 游닍 Directorio de instalaci칩n real
DEST="$HOME/usr/bin"
CACHE="/tmp/pexpkgs"

# 游깷 Repositorio remoto (esto lo vas a cambiar por tu GitHub real)
REPO_URL="https://tuusuario.github.io/pexpkgs"

# 游닂 Ayuda del sistema
usage() {
  echo -e "$INIT Pex Manager Packages $RESET"
  echo -e "Uso: pex <acci칩n> <paquete>"
  echo -e "Acciones disponibles:"
  echo "  install <paquete>   Instala un paquete"
  echo "  remove <paquete>    Elimina un paquete"
  echo "  search <paquete>    Busca un paquete"
  echo "  update              Actualiza el 칤ndice de paquetes"
  echo "  list                Lista los paquetes instalados"
  echo "  help                Muestra esta ayuda"
}

# 游댌 Buscar paquete en el 칤ndice local
searcher() {
  local pkg=$1
  echo -e "$INIT Buscando '$pkg' en el 칤ndice...$RESET"
  grep -i "$pkg" "$CACHE/index.txt" || echo -e "$RM No encontrado $RESET"
}

# 游닌 Instalador de paquetes
installer() {
  local pkg=$1
  local url="$REPO_URL/$pkg.tar.gz"
  echo -e "$INIT Descargando paquete '$pkg'...$RESET"

  mkdir -p "$DEST" "$CACHE"
  curl -L "$url" -o "$CACHE/$pkg.tar.gz" || {
    echo -e "$RM Error al descargar el paquete $RESET"
    exit 1
  }

  echo -e "$FINISH Extrayendo e instalando...$RESET"
  tar -xzf "$CACHE/$pkg.tar.gz" -C "$DEST" || {
    echo -e "$RM Error al extraer $RESET"
    exit 1
  }

  echo -e "$FINISH Paquete '$pkg' instalado con 칠xito. $RESET"
}

# 游빞 Eliminador de paquetes
remover() {
  local pkg=$1
  echo -e "$RM Eliminando '$pkg'...$RESET"
  rm -rf "$DEST/$pkg" && echo -e "$FINISH Paquete eliminado. $RESET"
}

# 游댃 Actualizador del 칤ndice
updater() {
  echo -e "$INIT Actualizando 칤ndice de paquetes...$RESET"
  mkdir -p "$CACHE"
  curl -L "$REPO_URL/index.txt" -o "$CACHE/index.txt" || {
    echo -e "$RM No se pudo actualizar el 칤ndice $RESET"
    exit 1
  }
  echo -e "$FINISH 칈ndice actualizado. $RESET"
}

# 游늭 Listar paquetes instalados
list_installed() {
  echo -e "$INIT Paquetes instalados en $DEST:$RESET"
  ls "$DEST"
}

# 游 Comprobaci칩n b치sica de argumentos
ACTION=$1
PACKAGE=$2

[[ -z $ACTION ]] && usage && exit 1

case "$ACTION" in
  install)
    [[ -z $PACKAGE ]] && echo -e "$RM Falta el nombre del paquete $RESET" && exit 1
    installer "$PACKAGE"
    ;;
  remove)
    [[ -z $PACKAGE ]] && echo -e "$RM Falta el nombre del paquete $RESET" && exit 1
    remover "$PACKAGE"
    ;;
  search)
    [[ -z $PACKAGE ]] && echo -e "$RM Falta el nombre del paquete $RESET" && exit 1
    searcher "$PACKAGE"
    ;;
  update)
    updater
    ;;
  list)
    list_installed
    ;;
  help|--help|-h)
    usage
    ;;
  *)
    echo -e "$RM Acci칩n no v치lida '$ACTION' $RESET"
    usage
    ;;
esac
